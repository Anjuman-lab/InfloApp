@page "/users" 
@inject IUserService UserService

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">User List</h3>
    <div class="d-flex gap-2">
        <select class="form-select w-auto border border-primary"
                @onchange="OnFilterChanged"
                style="min-width: 130px;">
            <option value="all" selected>Show All</option>
            <option value="active">Active Only</option>
            <option value="inactive">Inactive Only</option>
        </select>
        <button class="btn btn-primary">Add User</button>
    </div>
</div>


<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Id</th>
            <th>Forename</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Account Active</th>
            <th style="width:1px;"></th>
        </tr>
    </thead>
    <tbody>
        @if (Filtered is null)
        {
            <tr><td colspan="7" class="text-center text-muted">Loading...</td></tr>
        }
        else if (Filtered.Count == 0)
        {
            <tr><td colspan="7" class="text-center text-muted">No users found.</td></tr>
        }
        else
        {
            @foreach (var u in Filtered)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.Forename</td>
                    <td>@u.Surname</td>
                    <td>@u.Email</td>
                    <td>@u.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                    <td>@(u.IsActive ? "Yes" : "No")</td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                Actions
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/blazor/users/view/@u.Id">View</a></li>
                                <li><a class="dropdown-item" href="/blazor/users/edit/@u.Id">Edit</a></li>
                                <li><a class="dropdown-item" href="/blazor/users/delete/@u.Id">Delete</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@code {
    private string filter = "all";
    private List<User>? all;
    private List<User> Filtered => filter switch
    {
        "active" => all?.Where(x => x.IsActive).ToList() ?? new(),
        "inactive" => all?.Where(x => !x.IsActive).ToList() ?? new(),
        _ => all ?? new()
    };

    protected override async Task OnInitializedAsync()
    {
        // Temporary: reuse existing service until we connect real SQL
        all = await UserService.GetAllAsync();
    }

    private void OnFilterChanged(ChangeEventArgs e)
    {
        filter = e.Value?.ToString() ?? "all";
        StateHasChanged();
    }
}
