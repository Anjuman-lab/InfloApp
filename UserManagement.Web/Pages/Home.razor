@page "/"
@page "/home"

<h2 class="fw-bold">Dashboard</h2>
<p class="text-muted mb-4">Welcome to your user management system</p>

<div class="row g-3">
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h6 class="text-uppercase text-secondary mb-2">Total Users</h6>
                <h3 class="fw-bold">248</h3>
                <small class="text-success">+12% from last month</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h6 class="text-uppercase text-secondary mb-2">Active Users</h6>
                <h3 class="fw-bold">186</h3>
                <small class="text-success">+8% from last month</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h6 class="text-uppercase text-secondary mb-2">New Users</h6>
                <h3 class="fw-bold">42</h3>
                <small class="text-warning">This month</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h6 class="text-uppercase text-secondary mb-2">Inactive Users</h6>
                <h3 class="fw-bold">62</h3>
                <small class="text-danger">–3% from last month</small>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h5 class="fw-bold mb-3">Quick Actions</h5>
                <ul class="list-unstyled">
                    <li>• Add new users</li>
                    <li>• View & edit user details</li>
                    <li>• Manage roles & permissions</li>
                    <li>• Monitor active/inactive users</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h5 class="fw-bold mb-3">Recent Activity</h5>
                <ul class="list-unstyled">
                    <li><span class="text-success">5</span> new users added today</li>
                    <li><span class="text-primary">12</span> role updates this week</li>
                    <li><span class="text-warning">3</span> users pending activation</li>
                </ul>
            </div>
        </div>
    </div>
</div>
